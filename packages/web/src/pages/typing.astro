---
import "../styles/global.css";
import SiteHeader from "../components/SiteHeader.astro";

const settings = {
  corpus: "青空文庫（仮）",
  count: 5,
  layout: "QWERTY",
};

const prompt = {
  word: "日本で一番高い山は富士山だ",
  kana: "にほんでいちばんたかいやまはふじさんだ",
  typed: "にほんでいちばんt",
};

const layoutRows = [
  ["Q", "W", "E", "R", "T", "Y", "U", "I", "O", "P"],
  ["A", "S", "D", "F", "G", "H", "J", "K", "L", "—"],
  ["Z", "X", "C", "V", "B", "N", "M", "—", "—", "—"],
];
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>タイピング | Japanese Layout Analyzer</title>
  </head>
  <body class="min-h-screen">
    <div class="relative overflow-hidden">
      <div class="absolute -top-24 right-10 h-64 w-64 rounded-full bg-teal-100 blur-3xl"></div>
      <div class="absolute top-28 -left-20 h-72 w-72 rounded-full bg-orange-100 blur-3xl"></div>
      <SiteHeader />
      <main class="relative mx-auto flex w-full max-w-6xl flex-col gap-10 px-6 py-12">
        <header class="flex flex-col gap-4">
          <div class="inline-flex w-fit items-center gap-2 rounded-full border border-slate-200 bg-white/80 px-4 py-1 text-xs uppercase tracking-[0.35em] text-slate-500 shadow-sm">
            Typing Mockup
          </div>
          <div class="flex flex-col gap-3">
            <h1 class="text-3xl font-semibold text-slate-900 sm:text-4xl">
              タイピング体験
            </h1>
            <p class="max-w-2xl text-sm text-slate-600 sm:text-base">
              配列とワード数を選び、ローマ字テーブルに基づいた入力判定を体験する画面です。
              モックアップなので静的な表示のみ行っています。
            </p>
          </div>
        </header>

        <section class="border border-slate-200 bg-white/90 px-6 py-4 backdrop-blur">
          <div class="flex flex-wrap items-center justify-between gap-3 text-sm">
            <div class="flex flex-wrap items-center gap-3 text-slate-600">
              <span class="text-xs uppercase tracking-wider text-slate-400">設定</span>
              <span>ワード: オリジナル</span>
              <span>出題数: {settings.count}</span>
              <span>配列: {settings.layout}</span>
              <span class="text-slate-400">コーパス: {settings.corpus}</span>
            </div>
            <div class="flex gap-2 text-xs text-slate-600">
              <button class="rounded-full border border-slate-200 bg-white px-3 py-1">
                5
              </button>
              <button class="rounded-full border border-slate-200 bg-white px-3 py-1">
                10
              </button>
              <button class="rounded-full border border-slate-200 bg-white px-3 py-1">
                20
              </button>
            </div>
          </div>
        </section>

        <section class="border border-slate-200 bg-white/90 p-6 backdrop-blur">
          <div class="flex flex-col gap-4">
            <div class="text-xs text-slate-500">ワード表示</div>
            <div class="text-2xl font-semibold text-slate-900 sm:text-3xl">
              {prompt.word}
            </div>
            <div class="text-2xl text-slate-500">{prompt.kana}</div>
            <div class="mt-4 rounded-2xl border border-slate-200 bg-slate-50 px-4 py-3 text-2xl text-slate-700">
              <span class="text-slate-400">{prompt.typed.slice(0, -1)}</span>
              <span class="text-slate-900">{prompt.typed.slice(-1)}</span>
              <span class="ml-1 inline-block h-4 w-[2px] animate-pulse bg-teal-500 align-middle"></span>
            </div>
          </div>
        </section>

        <section class="border border-slate-200 bg-white/90 p-6 backdrop-blur">
          <div class="flex items-center justify-between">
            <h2 class="text-lg font-semibold text-slate-900">配列図</h2>
            <span class="text-xs text-slate-500">3行 x 10列</span>
          </div>
          <div class="mt-4 grid gap-2">
            {layoutRows.map((row) => (
              <div class="grid grid-cols-10 gap-2">
                {row.map((keyLabel) => (
                  <div class="flex h-10 items-center justify-center rounded-xl border border-slate-200 bg-slate-50 text-xs font-semibold text-slate-700 shadow-sm">
                    {keyLabel}
                  </div>
                ))}
              </div>
            ))}
          </div>
        </section>
      </main>
    </div>
  </body>
</html>
