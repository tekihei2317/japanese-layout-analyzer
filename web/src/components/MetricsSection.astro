---
type MetricDisplay = {
  label: string;
  value: string;
};

const { metrics } = Astro.props as { metrics: MetricDisplay[] };
---

<div class="mt-6">
  <div
    class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between"
  >
    <div>
      <h3 class="text-xl font-semibold text-slate-900">指標</h3>
    </div>
  </div>
  <div class="mt-4 overflow-x-auto rounded-2xl border border-slate-200">
    <table class="min-w-full text-left text-sm sm:text-base">
      <thead
        class="bg-slate-50 text-[11px] uppercase tracking-wider text-slate-500"
      >
        <tr>
          {
            metrics.map((metric) => (
              <th class="px-4 py-3 font-medium">{metric.label}</th>
            ))
          }
        </tr>
      </thead>
      <tbody>
        <tr class="bg-white">
          {
            metrics.map((metric) => (
              <td class="px-4 py-3 text-slate-700">{metric.value}</td>
            ))
          }
        </tr>
      </tbody>
    </table>
  </div>
</div>
