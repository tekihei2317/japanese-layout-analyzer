---
const current = Astro.url.pathname;
const links = [
  // { href: "/", label: "トップ" },
  { href: "/table", label: "比較する" },
  { href: "/typing", label: "配列を試す" },
];
const isActive = (href: string) => current === href;
---

<header class="border-b border-slate-200 bg-slate-100/80 backdrop-blur">
  <div
    class="mx-auto flex w-full max-w-6xl items-center justify-between px-6 py-4"
  >
    <div class="text-2xl font-semibold text-slate-900">
      <a href="/"> Japanese Layout Analyzer </a>
    </div>
    <nav class="flex items-center gap-3 text-lg">
      {
        links.map((link) => (
          <a
            href={link.href}
            aria-current={isActive(link.href) ? "page" : undefined}
            class={`rounded-full px-3 py-1 transition ${
              isActive(link.href)
                ? "bg-slate-900 text-white"
                : "text-slate-600 hover:bg-slate-100"
            }`}
          >
            {link.label}
          </a>
        ))
      }
      <a
        href="https://github.com/tekihei2317/japanese-layout-analyzer"
        class="flex items-center gap-2 rounded-full px-3 py-1 text-slate-600 transition hover:bg-slate-100"
        target="_blank"
        rel="noreferrer"
      >
        <span>GitHub</span>
        <svg
          aria-hidden="true"
          viewBox="0 0 24 24"
          class="h-4 w-4"
          fill="none"
          stroke="currentColor"
          stroke-width="1.8"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M18 13v5a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h5" />
          <path d="M15 3h6v6" />
          <path d="M10 14L21 3" />
        </svg>
      </a>
    </nav>
  </div>
</header>
