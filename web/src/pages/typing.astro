---
import "../styles/global.css";
import SiteHeader from "../components/SiteHeader.astro";
import { TypingGame } from "../typing/TypingGame";

const layoutRows = [
  ["Q", "W", "E", "R", "T", "Y", "U", "I", "O", "P"],
  ["A", "S", "D", "F", "G", "H", "J", "K", "L", "—"],
  ["Z", "X", "C", "V", "B", "N", "M", "—", "—", "—"],
];
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>タイピング | Japanese Layout Analyzer</title>
  </head>
  <body class="min-h-screen">
    <div class="relative overflow-hidden">
      <div class="absolute -top-24 right-10 h-64 w-64 rounded-full bg-teal-100 blur-3xl"></div>
      <div class="absolute top-28 -left-20 h-72 w-72 rounded-full bg-orange-100 blur-3xl"></div>
      <SiteHeader />
      <main class="relative mx-auto flex w-full max-w-6xl flex-col gap-10 px-6 py-12">
        <header class="flex flex-col gap-4">
          <div class="flex flex-col gap-3">
            <h1 class="text-3xl font-semibold text-slate-900 sm:text-4xl">
              配列を試す
            </h1>
          </div>
        </header>

        <TypingGame client:load />

        <section class="border border-slate-200 bg-white/90 p-6 backdrop-blur">
          <div class="flex items-center justify-between">
            <h2 class="text-lg font-semibold text-slate-900">配列図</h2>
          </div>
          <div class="mt-4 grid gap-2">
            {layoutRows.map((row) => (
              <div class="grid grid-cols-10 gap-2">
                {row.map((keyLabel) => (
                  <div class="flex h-10 items-center justify-center rounded-xl border border-slate-200 bg-slate-50 text-xs font-semibold text-slate-700 shadow-sm">
                    {keyLabel}
                  </div>
                ))}
              </div>
            ))}
          </div>
        </section>
      </main>
    </div>
  </body>
</html>
