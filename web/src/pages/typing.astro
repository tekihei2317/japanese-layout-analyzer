---
import BaseLayout from "../layouts/BaseLayout.astro";
import { TypingGame } from "../typing/TypingGame";
---

<BaseLayout title="タイピング | Japanese Layout Analyzer">
  <header class="flex flex-col gap-4">
    <div class="flex flex-col gap-3">
      <h1 class="text-2xl font-semibold text-slate-900 sm:text-3xl">
        配列を試す
      </h1>
      <p class="max-w-2xl text-base text-slate-600 sm:text-lg">
        色々な配列を体験できます。
      </p>
    </div>
  </header>

  <TypingGame client:load />
</BaseLayout>
