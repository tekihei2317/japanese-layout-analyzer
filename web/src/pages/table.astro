---
import BaseLayout from "../layouts/BaseLayout.astro";
import TableApp from "../components/TableApp";
import { loadMetricsData } from "../lib/metrics-data";

const { index, corpusDataById } = await loadMetricsData();
---

<BaseLayout
  title="指標テーブル | Japanese Layout Analyzer"
  mainClass="relative mx-auto flex w-full max-w-screen-2xl flex-col gap-8 px-6 py-12"
>
  <header class="flex flex-col gap-4">
    <div class="flex flex-col gap-3">
      <h1 class="text-2xl font-semibold text-slate-900 sm:text-3xl">
        指標一覧
      </h1>
    </div>
  </header>

  <section>
    <TableApp client:load index={index} corpusDataById={corpusDataById} />
  </section>
</BaseLayout>
