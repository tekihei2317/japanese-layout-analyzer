---
import "../styles/global.css";
import SiteHeader from "../components/SiteHeader.astro";
import TableApp from "../components/TableApp";
import { loadMetricsData } from "../lib/metrics-data";

const { index, corpusDataById } = await loadMetricsData();
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>指標テーブル | Japanese Layout Analyzer</title>
  </head>
  <body class="min-h-screen">
    <div class="relative overflow-hidden">
      <div class="absolute -top-24 right-10 h-64 w-64 rounded-full"></div>
      <div class="absolute top-32 -left-16 h-72 w-72 rounded-full"></div>
      <SiteHeader />
      <main
        class="relative mx-auto flex w-full max-w-screen-2xl flex-col gap-8 px-6 py-12"
      >
        <header class="flex flex-col gap-4">
          <div class="flex flex-col gap-3">
            <h1 class="text-2xl font-semibold text-slate-900 sm:text-3xl">
              指標一覧
            </h1>
          </div>
        </header>

        <section class="backdrop-blur">
          <TableApp client:load index={index} corpusDataById={corpusDataById} />
        </section>
      </main>
    </div>
  </body>
</html>
